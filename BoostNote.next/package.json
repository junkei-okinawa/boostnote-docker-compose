    "remark-admonitions": "^1.2.1",
    "remark-emoji": "^2.1.0",
    "remark-math": "^2.0.1",
    "remark-parse": "^8.0.3",
    "remark-rehype": "^7.0.0",
    "remark-slug": "^6.0.0",
    "remark-stringify": "^8.1.1",
    "shortid": "^2.2.16",
    "styled-components": "^4.3.2",
    "unified": "^9.2.0",
    "unist-util-visit": "^2.0.3",
    "use-force-update": "^1.0.7",
    "yaml": "^1.10.0"
  },
  "build": {
    "appId": "com.boostio.boostnote",
    "artifactName": "boost-note-${os}.${ext}",
    "copyright": "Copyright Â© 2016-2017 BoostIO",
    "directories": {
      "app": "electron"
    },
    "asar": false,
    "afterSign": "build-utils/afterSignHook.js",
    "mac": {
      "icon": "static/icon.icns",
      "hardenedRuntime": true,
      "entitlementsInherit": "macOs/entitlements.mac.plist",
      "entitlements": "macOs/entitlements.mac.plist"
    },
    "linux": {
      "icon": "static/icon.icns",
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ]
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "certificateSubjectName": "BOOST IO K.K.",
      "icon": "static/icon.ico",
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    },
    "protocols": [
      {
        "name": "Boost Note",
        "schemes": [
          "boostnote"
        ]
      }
    ],
    "publish": "github"
  }
}
