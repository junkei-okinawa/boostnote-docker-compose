    "path-to-regexp": "^2.4.0",
    "pouchdb-adapter-http": "^7.2.2",
    "pouchdb-adapter-idb": "^7.2.2",
    "pouchdb-adapter-memory": "^7.2.2",
    "pouchdb-core": "^7.2.2",
    "pouchdb-find": "^7.2.2",
    "pouchdb-mapreduce": "^7.2.2",
    "pouchdb-replication": "^7.2.2",
    "ramda": "^0.26.1",
    "raw-loader": "^4.0.2",
    "react": "^16.14.0",
    "react-color": "^2.19.3",
    "react-dom": "^16.14.0",
    "react-i18next": "^11.8.5",
    "react-use": "^12.10.0",
    "read-chunk": "^3.2.0",
    "rehype-document": "^5.1.0",
    "rehype-katex": "^3.1.0",
    "rehype-raw": "^4.0.2",
    "rehype-react": "^6.2.0",
