    "html-webpack-plugin": "^3.2.0",
    "jest": "^26.6.3",
    "json-loader": "^0.5.7",
    "path-browserify": "^1.0.1",
    "png2icons": "^2.0.1",
    "prettier": "^2.2.1",
    "react-hot-loader": "^4.13.0",
    "react-test-renderer": "^16.14.0",
    "rimraf": "^3.0.0",
    "style-loader": "^1.3.0",
    "ts-jest": "^26.5.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "type-fest": "^0.13.1",
    "typescript": "^3.9.7",
    "url-loader": "^2.1.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@mdi/js": "^5.9.55",
    "@mdi/react": "^1.4.0",
    "@types/react-color": "^3.0.4",
    "aws-amplify": "^3.3.17",
    "classcat": "^4.1.0",
    "codemirror": "^5.59.2",
    "codemirror-abap": "^0.2.3",
    "coffeescript": "^2.4.1",
    "copy-to-clipboard": "^3.3.1",
    "cson-parser": "^4.0.7",
    "dashify": "^2.0.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "electron-log": "^4.3.1",
    "electron-updater": "^4.3.5",
